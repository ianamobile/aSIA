<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.iana.sia.SplashScreen"
    >

    <ImageView
        android:id="@+id/applicationImg"
        android:layout_width="@dimen/splash_app_img_width"
        android:layout_height="@dimen/splash_app_img_height"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/sia_logo" />

    <ImageView
        android:id="@+id/ianaImg"
        android:layout_width="@dimen/splash_iana_img_width"
        android:layout_height="@dimen/splash_iana_img_height"
        android:layout_marginBottom="19dp"
        app:srcCompat="@drawable/iana_logo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
